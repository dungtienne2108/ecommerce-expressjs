# Server Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# HTTPS Configuration
ENABLE_HTTPS=true
HTTPS_PORT=3443
REDIRECT_TO_HTTPS=true

# SSL Certificate paths
SSL_KEY_PATH=./ssl/private-key.pem
SSL_CERT_PATH=./ssl/certificate.pem

# Database Configuration
DATABASE_URL="your_database_url_here"
DB_HOST=localhost
DB_PORT=5433
DB_NAME=express-ecommerce
DB_USER=postgres
DB_PASSWORD=23102001
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_HOST=your_redis_host_here
REDIS_PORT=your_redis_port_here
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Middleware Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://admin.socket.io
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRE=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Blockchain - BSC Mainnet
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_PRIVATE_KEY=your_private_key_here
BSC_TOKEN_ADDRESS=0x... # Nếu gửi token, để trống nếu gửi BNB

# Blockchain - BSC Testnet (để test)
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
BSC_TESTNET_PRIVATE_KEY=your_testnet_private_key_here
BSC_TESTNET_TOKEN_ADDRESS=your_testnet_token_address_here

# Blockchain - Ethereum
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETH_PRIVATE_KEY=your_eth_private_key
ETH_TOKEN_ADDRESS=0x...

# Blockchain - Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_PRIVATE_KEY=your_polygon_private_key
POLYGON_TOKEN_ADDRESS=0x...

# Email Configuration (optional)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log