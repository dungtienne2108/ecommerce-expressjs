  totalLimit      Int?          @map("total_limit") // Tổng số lượt sử dụng (null = unlimited)
  usedCount       Int           @default(0) @map("used_count") // Đã sử dụng
  limitPerUser    Int?          @map("limit_per_user") // Giới hạn mỗi user (null = unlimited)

  // Thời gian hiệu lực
  startDate       DateTime      @map("start_date")
  endDate         DateTime      @map("end_date")

  // Trạng thái
  status          VoucherStatus @default(ACTIVE)
  isPublic        Boolean       @default(true) @map("is_public") // Public hay private

  // Auditable fields
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  createdBy       String?       @map("created_by")
  updatedBy       String?       @map("updated_by")

  // Soft delete
  deletedAt       DateTime?     @map("deleted_at")
  deletedBy       String?       @map("deleted_by")

  // Relations
  shop            Shop?         @relation(fields: [shopId], references: [id], onDelete: Cascade)
  usages          VoucherUsage[]
  orders          Order[]

  @@map("vouchers")
  @@index([code])
  @@index([shopId])
  @@index([status])
  @@index([startDate])
  @@index([endDate])
  @@index([createdAt])
  @@index([deletedAt])
}

// Lịch sử sử dụng voucher
model VoucherUsage {
  id              String    @id @default(uuid())
  voucherId       String    @map("voucher_id")
  userId          String    @map("user_id")
  orderId         String?   @map("order_id") // Null nếu order bị hủy

  discountAmount  Decimal   @map("discount_amount") @db.Decimal(15,2) // Số tiền đã giảm

  usedAt          DateTime  @default(now()) @map("used_at")

  // Relations
  voucher         Voucher   @relation(fields: [voucherId], references: [id], onDelete: Cascade)
  user            User      @relation(fields: [userId], references: [id])
  order           Order?    @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@map("voucher_usages")
  @@index([voucherId])
  @@index([userId])
  @@index([orderId])
  @@index([usedAt])
}